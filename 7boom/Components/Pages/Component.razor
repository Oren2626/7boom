@page "/7BOOM"
<h3>7BOOM</h3>


<div class="container">
            <p>
                @for (int i = 1; i < 700; i++)
                {
                        <span>
                        @Boom(i)
                            <span> </span>
                        </span>
                }
            </p>

</div>

@code {
    public static bool have7(int num)
    {
        while(num != 0)
        {
            if (num % 10 == 7)
                return true;
            num = num / 10;
        }
        return false;
    }
    public static string Boom(int num)
    {
        if ((num % 7 == 0) || have7(num))
            return "Boom";
        return num.ToString();
    }
}